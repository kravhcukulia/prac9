from tkinter import *
from tkinter import messagebox

root = Tk()
root.geometry("300x100+600+400")
str_var = StringVar()  # створення об’єкта для отримання значення з текстового поля

def button_click(event):  # обробник події з параметром event
    messagebox.showinfo("Привітання", "Вітаю " + str_var.get() + "!")

Label(root, text="Введіть ім'я:").pack()  # створення напису
Entry(root, textvariable=str_var).pack()  # поле для введення

button = Button(root, text="Ok!")
button.pack()

button.bind("<Button-1>", button_click)  # прив'язка події натискання кнопки миші

root.mainloop()
